{% extends "::base.html.twig" %}


        {% block title 'Détail du Tweet' %}


        {% block header %}
            <h1>Détails du tweet {{ tweet.id }}</h1>
        {% endblock %}

        {% block content %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ tweet.message }}
                    </div>
                    <div  class="panel-body">
                        Posté le : {{ tweet.createdAt | date('d/m/Y')}}
                        à {{ tweet.createdAt | date('H:i:s') }}
                    </div>
                </div>
        {% endblock %}

        {% block footer %}
            {{ parent() }}
        {% endblock %}