{% extends "::base.html.twig" %}


        {% block title 'Nouveau Tweet' %}


        {% block header %}
            <h1>Ecrire un nouveau Tweet</h1>
        {% endblock %}

        {% block content %}
            {{ form_start(form, {'attr': {'class': 'form-horizontal','novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}
            {{ form_row(form.message) }}
            {{ form_rest(form) }}
            <input type="submit" class="btn btn-primary" value="Envoyer">
            {{ form_end(form) }}

        {% endblock %}

        {% block footer %}
            {{ parent() }}
        {% endblock %}